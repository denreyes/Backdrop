<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#88424242"
                android:centerColor="#dd424242"
                android:centerY="0.75"
                android:endColor="#ff424242"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#80EEEEEE"
                    android:centerColor="#80F5F5F5"
                    android:centerY="0.75"
                    android:endColor="#a0FAFAFA"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#ffEEEEEE"
                    android:centerColor="#ffFAFAFA"
                    android:centerY="0.75"
                    android:endColor="#ffffffff"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>

