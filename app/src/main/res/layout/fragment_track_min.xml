<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="@android:color/black"
    android:clickable="true">

    <ImageView
        android:id="@+id/img_album_art"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:layout_marginLeft="12dp"
        android:layout_toEndOf="@+id/frame_control"
        android:layout_marginRight="36dp"
        android:layout_toRightOf="@+id/frame_control"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="Artist"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

    <FrameLayout
        android:id="@+id/frame_control"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ccd05254">

        <ImageView
            android:id="@+id/img_btn_control"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@drawable/ic_play" />

    </FrameLayout>

    <ImageView
        android:id="@+id/img_btn_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@drawable/ic_arrow_up" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/PlayerSeekbar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:indeterminate="false"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:thumb="@null" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_artist"
        android:layout_alignStart="@+id/text_artist"
        android:layout_below="@+id/seekBar"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif-black"
        android:layout_marginRight="36dp"
        android:maxLines="1"
        android:paddingTop="14dp"
        android:text="Title"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</RelativeLayout>