<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/rlUser"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_below="@id/toolbar"
        android:paddingEnd="18dp"
        android:paddingStart="18dp">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@color/colorAccent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/ivPhoto"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="HEY, Den"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

    </RelativeLayout>

    <!--<View-->
        <!--android:id="@+id/divider"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_below="@+id/rlUser"-->
        <!--android:background="@color/colorPrimary" />-->

    <RelativeLayout
        android:id="@+id/rlAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/rlUser"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:paddingEnd="18dp"
        android:paddingStart="18dp">

        <ImageView
            android:id="@+id/ivAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_account_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/ivAbout"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="About" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rlAbout"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:paddingEnd="18dp"
        android:paddingStart="18dp">

        <ImageView
            android:id="@+id/ivLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_account_logout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/ivLogout"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Logout" />

    </RelativeLayout>

</RelativeLayout>