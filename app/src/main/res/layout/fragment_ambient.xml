<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_diner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/space1"
                android:layout_toStartOf="@+id/img_rain"
                android:clickable="true"
                android:src="@drawable/img_ambient_diner" />

            <Space
                android:id="@+id/space1"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/img_diner" />


            <ImageView
                android:id="@+id/img_rain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/space2"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:clickable="true"
                android:src="@drawable/img_ambient_rain" />

            <Space
                android:id="@+id/space2"
                android:layout_width="75dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp" />


            <ImageView
                android:id="@+id/img_cafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/space3"
                android:layout_toEndOf="@+id/img_rain"
                android:clickable="true"
                android:src="@drawable/img_ambient_cafe" />

            <Space
                android:id="@+id/space3"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/img_cafe"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_waves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/space4"
                android:layout_toStartOf="@+id/img_park"
                android:clickable="true"
                android:src="@drawable/img_ambient_waves" />

            <Space
                android:id="@+id/space4"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/img_waves" />


            <ImageView
                android:id="@+id/img_park"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/space5"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:clickable="true"
                android:src="@drawable/img_ambient_park" />

            <Space
                android:id="@+id/space5"
                android:layout_width="75dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp" />


            <ImageView
                android:id="@+id/img_storm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/space6"
                android:layout_toEndOf="@+id/img_park"
                android:clickable="true"
                android:src="@drawable/img_ambient_storm" />

            <Space
                android:id="@+id/space6"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/img_storm"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>